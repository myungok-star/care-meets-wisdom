
.container.center-align
  .row
    .col-s12-m6.offset-m3
      %br
      %h2 Sign up as Volunteer!
      %br
      .col-md-12.text-danger
        = flash[:error]

        = form_for :volunteer, url: '/volunteers' do |f|
          .form-group
            = f.text_field :name, class: "form-control", placeholder: "Name"
          .form-group
            = f.text_field :email, class: "form-control", placeholder: "Email"
          .form-group
            = f.password_field :password, class: "form-control", placeholder: "Password"
          .form-group
            = f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm your password"
            = f.hidden_field :avatar, :value => "http://i.imgur.com/9JlhmGx.png"
          .form-group
            %br
            = f.submit "Sign Up", class: "btn btn-success"
