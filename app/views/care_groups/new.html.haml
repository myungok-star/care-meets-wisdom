
.container.center-align
  .row
    .col-s12-m6.offset-m3
      %br
      %h2 Sign Up as Care Group
      %br
      .col-md-12.text-danger
        = flash[:error]

        = form_for :care_group, url: '/care_groups' do |f|
          .form-group
            = f.text_field :name, class: "form-control", placeholder: "Name"
          .form-group
            = f.text_field :email, class: "form-control", placeholder: "Email"
            .form-group
              = f.text_field :location, class: "form-control", placeholder: "Location (ex. San Francisco, CA)"
          .form-group
            = f.password_field :password, class: "form-control", placeholder: "Password"
          .form-group
            = f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm your password"
            -# TODO: Do not use other site's assets for your own site. This costs them money and doesn't look good on your end.  Host your own content in this site.
            = f.hidden_field :photo, :value => "https://share.okdothis.com/assets/default-avatar-c246f74ff56d382424ac2c750e40b0a6.png?w=64&h=64"
          .form-group
            %br
            = f.submit "Sign Up", class: "btn btn-success"
