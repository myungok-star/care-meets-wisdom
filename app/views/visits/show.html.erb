<div class="container">
	<% if current_care_group != nil && current_care_group == @visit.senior.care_group %>
		<div class="row">
			<div class="col s12 m12">
				<div class="card white center-align" style="margin-top: 80px;">
					<div class="card-content black-text">
						<span class="card-title"><%= @visit.volunteer.name %> wants to visit <%= @visit.senior.name %></span>
					<div class="card-action">
						<%= button_to "Yes!", approve_visit_path(@visit), method: :put, class:"btn btn-primary" %><br>
						<%= button_to "Next Time!", delete_visit_path(@visit), method: :delete, class:"btn btn-danger" %>
					</div>
					</div>
				</div>
			</div>
		</div>
	<% end %>
</div>
