<div class="container">
  <div class="row">
    <div class="col s12 center-align">
      <h2>Update!</h2>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
      <%= form_for :senior, url: "/care_groups/#{@current_care_group_id}/seniors/#{@senior.id}", html: { multipart: true, class: "col s12 m6 offset-m3"}, method: :patch do |f| %>
        <b>Name: </b><%= f.text_field :name, required: true %>
        <b>Interests: </b><%= f.text_area :interests %>
        <%= f.submit 'Update', class: 'btn waves-effect waves-light' %>
      <% end %>
    </div>
  </div>
</div>
